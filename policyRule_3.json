{
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Web/sites"
            },
            {
                "field": "kind",
                "like": "functionapp*"
            },
            {
                "field": "Microsoft.Web/sites/clientCertEnabled",
                "equals": "false"
            }
        ]
    },
    "then": {
        "effect": "[parameters('effect')]"
    }
}